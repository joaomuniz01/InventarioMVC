@model IEnumerable<Inventario.Models.Ativo>

@{
    ViewBag.Title = "Ativos";
}

<h2>Ativos</h2>

<p>
    @Html.ActionLink("Registrar", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Usuario.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Local)</th>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: ativos">
        <tr>
            <td data-bind="text: Descricao"></td>
            <td data-bind="text: Local"></td>
            <td data-bind="text: Tipo"></td>
            <td>
                <a data-bind="attr: { href: '@Url.Action("Details")/' + Id }"
                   class="btn btn-info">Detalhes</a>
                <a data-bind="attr: { href: '@Url.Action("Edit")/' + Id }"
                   class="btn btn-primary">Editar</a>
                <a data-bind="attr: { href: '@Url.Action("Delete")/' + Id }"
                   class="btn btn-danger">Apagar</a>
            </td>
        </tr>
    </tbody>
</table>
